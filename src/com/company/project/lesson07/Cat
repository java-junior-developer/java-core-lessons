package com.company.project.lesson07.task.Animal;

public class Cat {
    private String name = "Мурзик";
    private int weight;
    private int countOfVictories;

    public String getName() {
        return name;
    }

    public void setName(String name) {
        if (name.split(" ").length>3){
        this.name = name;}
    }

    public int getWeight() {
        return weight;
    }

    public void setWeight(int weight) {
        if (weight>=1&weight<9 ){
        this.weight = weight;}
    }

    public int getCountOfVictories() {
        return countOfVictories;
    }
    public boolean attack(Cat cat){
        if (cat ==null){return false;
        }else{
            if(this.weight>cat.weight){
                countOfVictories++;
                return true;
            }return false;
        }

    }
}
